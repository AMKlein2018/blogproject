<!DOCTYPE html>
<html>
  <head>
    <title>Blogproject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <div class = "wrapper">
        <nav>
          <li><a href='/'>Home</a></li>

          <% if !signed_in? %>
          <li><a href='/users/sign_up'>Sign up</a></li>
          <li><a href='/users/sign_in'>Log In</a></li>
          <% end %>

          <% if signed_in? %>
          <li><%= link_to "New Post", new_blog_path %>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li><br /><br />


          <div class = "currentuser">Current User: <a href='/profile/<%=current_user.id %>'<%= current_user.id %>'><%= current_user.email %></a></div>



          <% end %>

        </nav>
        <div id = "clock"></div>

      </div>

  <%= javascript_include_tag "main" %> 
    <%= yield %>
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
  </body>
</html>
